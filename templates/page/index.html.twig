{% extends 'base_admin.html.twig' %}

{% block title %}Page management{% endblock %}

{% block body %}
    <div class="container">
        <h1 class='text-center'>Page management</h1>
        <div class=" text-center mb-4">
            <a href="{{ path('text_article_index') }}" class="btn btn-article">text-articles list</a>
            <a href="{{ path('page_new') }}" class="btn btn-add-panier">Create new page</a>
            <a href="{{ path('article_index') }}" class="btn btn-article">articles list</a>
            
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Heading</th>
                    <th>Metadescription</th>
                    <th colspan="3">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for page in pages %}
                <tr>
                    <td>{{ page.title }}</td>
                    <td>{{ page.heading }}</td>
                    <td>{{ page.metadescription }}</td>
                    <td>
                        <a class='btn btn-sm btn-success mb-15' href="{{ path('page_show', {'slug': page.slug}) }}" title='edit'>
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16"><path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z"/><path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/></svg>                        
                        </a>
                        <a class='btn btn-sm btn-edit  mb-15' href="{{ path('page_edit', {'id': page.id}) }}" title='edit'>
                            <svg width="15" height="15"viewBox="0 0 24 24"xmlns="http://www.w3.org/2000/svg"fill="none"stroke="currentColor"stroke-width="2"stroke-linecap="round"stroke-linejoin="round"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7" /><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z" /></svg>
                        </a>

                        {% if page.id != 1 %}
                        {{ include('page/_delete_form.html.twig') }}
                        {% endif %}
                        
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
