{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}
{% block navstart %}{% endblock %}

{% block body %}
        <div class="container text-center">
            <h3>Login</h2>
            <div class="row">
                <div class="col-lg-5 m-auto">
                    <div class="card mt-2">
                        <div class="card-body rounded">
                            <form method="post">
                                {% if error %}
                                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                {% endif %}
                                {% if app.user %}
                                    <div class="mb-3">
                                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                                    </div>
                                {% endif %}
                                <div class="input-group mb-3">
                                    <div class="input-group prepend">
                                        <span class="input-group-text ">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#856D59" class="bi bi-person-fill" viewBox="0 0 16 16">
                                                <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
                                            </svg>                                    
                                        </span>
                                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control py-3" placeholder='Email'required autofocus>
                                    </div>
                                </div>
                                <div class="input-group mb-3">
                                    <div class="input-group prepend">
                                        <span class="input-group-text">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#856D59" class="bi bi-lock-fill" viewBox="0 0 16 16">
                                            <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2z"/>
                                            </svg>                                        
                                        </span>
                                        <input type="password" name="password" id="inputPassword" class="form-control py-3" placeholder="Password" required>
                                    </div>
                                </div>
                                <input type="hidden" name="_csrf_token"
                                value="{{ csrf_token('authenticate') }}">
                                {# <div class="text-center"> #}
                                    <button class="btn btn-lg btn-add-panier btn-block" type="submit">
                                        Log in
                                    </button>
                                </div>
                                {% if (is_granted('ROLE_USER')) %}
                                {% else %}
                                <div class='mb-4 d-flex justify-content-around'>
                                    <span>
                                        <a href="{{ path('forgotten_password') }}">I forgot my password</a>
                                    </span>
                                    <span>
                                        <a href="{{ path('user_new') }}">Create an account</a>
                                    </span>
                                </div>
                                {% endif %}
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}

        </form>
    </div>
{% endblock %}
{% block instagram %}{% endblock %}
{% block social_footer %}{% endblock %}


