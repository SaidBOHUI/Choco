{% extends 'base_admin.html.twig' %}

{% block title %}Edit Categorie{% endblock %}

{% block body %}
	<div class="container">
			<h1 class='text-center'>Edit Categorie</h1>
		<div class='container'>
			
			{{ include('categories/_form.html.twig', {'button_label': 'Update'}) }}
			
			<div class="text-center">
				<a href="{{ path('categories_index') }}" class="btn btn-retour">&#x2190; back to list</a>
			</div>		
	</div>
{% endblock %}



{% block javascripts %}

	{# recupération du nom du fichier -> Récupération de l'id du champ output -> A l'action 'change' le nom est placé dans le output, effectuer une boucle pour récupérer plusieurs fichiers #}
	<script>
		let inputImage = document.getElementById('categories_image')
		inputImage.addEventListener('change',()=>{

				document.getElementById('categories_image_help').textContent = inputImage.files[0].name
			})

		let inputBanner = document.getElementById('categories_banner')
			inputBanner.addEventListener('change',()=>{

				document.getElementById('categories_banner_help').textContent = inputBanner.files[0].name
			})
	</script>
{% endblock %}

