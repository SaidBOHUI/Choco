{% extends 'base_admin.html.twig' %}

{% block body_class %}{% endblock %}
{% block title %}Category management{% endblock %}

{% block body %}
	<div class="container">

		<h1 class="text-center">Category management</h1>

		<div class="text-center mb-4">
            <a href="{{ path('categories_new') }}" class="btn btn-add-panier">Create new</a>
        </div>

		<div class="l-container-card">
		{% for category in categories %}
			<div class="card_category" style="background-image:url('{{ asset("images/upload/" ~ category.image )}}')">
				<div class="card_container">
					<div class="card_category_body">
						<h4>{{ category.name }}</h4>
						<a href="{{ asset("images/upload/" ~ category.banner )}}" data-lightbox="roadtrip" class="strong">
							show background
						</a>
						<h6>Alternative text : {{ category.alternativeText }}</h6>
					</div>

					<div class="card_category_footer">
						<a class='btn btn-sm btn-edit mr-15' href="{{ path('categories_edit', {'id': category.id}) }}" title="edit">
							<svg width="15" height="15"viewBox="0 0 24 24"xmlns="http://www.w3.org/2000/svg"fill="none"stroke="currentColor"stroke-width="2"stroke-linecap="round"stroke-linejoin="round"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7" /><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z" /></svg>
						</a>
						{{ include('categories/_delete_form.html.twig') }}
					</div>
				</div>
			</div>
		{% endfor %}
		</div>

	</div>
{% endblock %}
