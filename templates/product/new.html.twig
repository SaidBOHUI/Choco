{% extends 'base_admin.html.twig' %}

{% block title %}New Product{% endblock %}

{% block body %}
    <div class="container">
        <h1 class='text-center'>Create new Product</h1>

        {{ include('product/_form.html.twig') }}

      
		<div class="text-center">
            <a href="{{ path('product_index') }}" class="btn btn-retour">&#x2190; back to list</a>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
	
	{# recupération du nom du fichier -> Récupération de l'id du champ output -> A l'action 'change' le nom est placé dans le output, effectuer une boucle pour récupérer plusieurs fichiers #}
	<script>
		
		let inputImage = document.getElementById('product_imgProduct')
		inputImage.addEventListener('change',()=>{

				document.getElementById('product_imgProduct_help').textContent = inputImage.files[0].name
			})
			
	</script>
{% endblock %}
