{% extends 'base.html.twig' %}

{% block title %}Reset password{% endblock %}
{% block navstart %}{% endblock %}

{% block body %}
        <div class="container text-center">
        {% if error %}
                    <h3>Page not found</h2>
            <div class="row">
                <div class="col-lg-5 m-auto">
                    <div class="card mt-2">
                        <div class="card-body rounded">
                            <p>The page you are looking for doesn't exist</p>
                            <a href="{{ path('page_show' , {'slug' : 'home'})  }}">home</a>      
                        </div>
                    </div>
                </div>
            </div>
         {% else %}
            <h3>Reset password</h2>
            <div class="row">
                <div class="col-lg-5 m-auto">
                    <div class="card mt-2">
                        <div class="card-body rounded">
                            {{ form_start(form) }}
                            {{ form_widget(form) }}
                            <button class="btn btn-val">{{ button_label|default('Save') }}</button>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        {% endif %} 
        </div>
{% endblock %}
{% block instagram %}{% endblock %}
{% block social_footer %}{% endblock %}